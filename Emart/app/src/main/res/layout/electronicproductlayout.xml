<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="25dp"
        android:layout_margin="5dp"
        android:id="@+id/card2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF"
            >
            <ImageView
                android:id="@+id/eleprimage1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/ele1"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/eledes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="MacBook Pro 2022"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="20dp"

                    />
                <ImageView
                    android:layout_width="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="20dp"

                    />
                <ImageView
                    android:layout_width="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starhalf"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/elerank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="right"
                    android:text="13 ranking"
                    android:layout_marginTop="1dp"
                    android:textColor="#F41C35"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/elecost1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="80000/-"
                android:textSize="25dp"
                android:textColor="@color/black"></TextView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>