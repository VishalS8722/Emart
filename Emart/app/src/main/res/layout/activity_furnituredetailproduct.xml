<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E40000">


    <LinearLayout
        android:id="@+id/furnituredetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/Pdimage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:padding="10dp"
            android:src="@drawable/fur1" />

        <TextView
            android:id="@+id/Pddecs"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:text="Classic Tethered Metallic Table"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Pdprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="15000/-"
            android:textColor="#FF0000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AddCartFurPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-36dp"
            android:text="Add to Cart"
            android:textColor="#000064"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/starfull"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/starfull"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/starhalf" />

            <TextView
                android:id="@+id/frank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="13 ranking"
                android:textColor="#F41C35"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/BuyFurPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0000FF"
            android:text="Buy Now"
            android:textColor="#F8F8F8"
            android:textSize="25dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>