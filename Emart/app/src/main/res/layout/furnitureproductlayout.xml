<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="30dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#CCC3DD"
            >
            <ImageView
                android:id="@+id/furprimage2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/fur1"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/furdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="Classic Tethered Metallic Table"
                android:textSize="25dp"
                android:textColor="@color/black"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starhalf"
                    android:layout_height="40dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13 ranking"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#E91E63"
                    android:layout_weight="1"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:id="@+id/furcost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="15000/-"
                android:textSize="30dp"
                android:textColor="@color/black"></TextView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="30dp"
        app:cardCornerRadius="25dp"
       android:layout_marginTop="450dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#CCC3DD"
            >
            <ImageView
                android:id="@+id/furprimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/fur3"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/furdes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="Classic Tethered Metallic Table"
                android:textSize="25dp"
                android:textColor="@color/black"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starfull"
                    android:layout_height="40dp"

                    />
                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/starhalf"
                    android:layout_height="40dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13 ranking"
                    android:textSize="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#E91E63"
                    android:layout_weight="1"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:id="@+id/furcost2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="30000/-"
                android:textSize="30dp"
                android:textColor="@color/black"></TextView>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>