<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/constraintLayout"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/home"></ImageView>

        <TextView
            android:id="@+id/Home_text"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="80dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/Furniture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/furnitures"></ImageView>

        <TextView
            android:id="@+id/Furniture_text"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="80dp"
            android:text="Furniture"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/Electronics"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/gadgets"></ImageView>

        <TextView
            android:id="@+id/Electronics_text"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="80dp"
            android:text="Electronics"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/Cosmetics"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/cosmetics"></ImageView>

        <TextView
            android:id="@+id/Cosmetics_text"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="214dp"
            android:layout_marginTop="80dp"
            android:text="Cosmetics"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/Fresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/homedelivery"></ImageView>

        <TextView
            android:id="@+id/Fresh_text"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="296dp"
            android:layout_marginTop="80dp"
            android:text="Fresh"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
    </FrameLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877"
        android:columnCount="2"
        android:rowCount="2" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_furniture"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="13dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Image1_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/f3"></ImageView>
                <TextView
                    android:id="@+id/Text1_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>